<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <com.xephorium.crystalnote.ui.custom.NoteToolbar
        android:id="@+id/selection_toolbar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:layout_alignParentTop="true"
        android:elevation="@dimen/toolbar_elevation"
        app:contentInsetStart="0dp"
        app:theme="@style/ToolbarTheme"
        />

    <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                  android:id="@+id/swipe_refresh_layout"
                                                  android:layout_width="match_parent"
                                                  android:layout_height="wrap_content"
                                                  android:layout_below="@+id/selection_toolbar"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/new_note_header"
                    android:layout_width="@dimen/list_item_height"
                    android:layout_height="@dimen/list_header_height"
                    android:paddingBottom="@dimen/padding_small"
                    android:gravity="bottom|center_horizontal"
                    android:text="@string/today"
                    style="@style/ListViewHeaderTheme"
                    />


                <ListView
                    android:id="@+id/new_note_list_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:id="@+id/old_note_header"
                    android:layout_width="@dimen/list_item_height"
                    android:layout_height="@dimen/list_header_height"
                    android:paddingBottom="@dimen/padding_small"
                    android:gravity="bottom|center_horizontal"
                    android:text="@string/older"
                    style="@style/ListViewHeaderTheme"
                    />

                <ListView
                    android:id="@+id/old_note_list_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

        </ScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/selection_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/activity_padding"
        android:layout_marginBottom="@dimen/activity_padding"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/icon_add"
        app:backgroundTint="@color/colorPrimary"
        app:rippleColor="@color/rippleDark"
        app:theme="@style/FloatingActionButtonTheme"
        />

</RelativeLayout>