<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentInsetStart="0dp">

    <ImageView
        android:id="@+id/left_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/toolbar_height"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/padding_large"
        android:layout_marginEnd="@dimen/padding_large"
        android:background="?selectableItemBackgroundBorderless"
        android:clickable="true"
        android:contentDescription="@string/toolbar_left_icon" />

    <ImageView
        android:id="@+id/right_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/toolbar_height"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/padding_large"
        android:layout_marginEnd="@dimen/padding_large"
        android:background="?selectableItemBackgroundBorderless"
        android:clickable="true"
        android:contentDescription="@string/toolbar_right_icon" />

    <EditText
        android:id="@+id/edit_text"
        style="@style/ToolbarEditTextTheme"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/toolbar_height"
        android:layout_toStartOf="@+id/right_button"
        android:layout_toEndOf="@+id/left_button"
        android:gravity="center_vertical"
        android:hint="@string/new_note_name"
        android:inputType="text" />

    <TextView
        android:id="@+id/note_toolbar_title"
        style="@style/ToolbarTitleTheme"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/toolbar_height"
        android:layout_toStartOf="@+id/right_button"
        android:layout_toEndOf="@+id/left_button"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1" />

</RelativeLayout>