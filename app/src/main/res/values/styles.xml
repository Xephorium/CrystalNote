<resources>

    <!-- Splash Theme -->

    <style name="SplashTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <!-- Universal App Theme -->

    <style name="CrystalNoteTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorControlActivated">?themeTextHandle</item>
        <item name="android:colorControlHighlight">?themeToolbarRipple</item>
        <item name="android:textColorHighlight">?themeTextHighlight</item>

        <item name="android:toolbarStyle">@style/ToolbarTheme</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat">
        <item name="android:background">?themeToolbar</item>
        <item name="android:actionMenuTextColor">?themeToolbarTextPrimary</item>
        <item name="android:colorControlActivated">?themeTextHandle</item>
    </style>


    <!-- Color Themes -->

    <style name="Monochrome" parent="CrystalNoteTheme">

        <item name="themeStatusBar">@color/charcoalDark</item>

        <item name="themeToolbar">@color/charcoalLight</item>
        <item name="themeToolbarRipple">@color/rippleDark</item>
        <item name="themeToolbarTextPrimary">@color/whiteSmoke</item>
        <item name="themeToolbarTextSecondary">@color/whiteSmokeAlpha</item>

        <item name="themeBackground">@color/backgroundDefault</item>

        <item name="themeAccent">@color/charcoalLight</item>
        <item name="themeAccentRipple">@color/rippleDark</item>
        <item name="themeAccentTextPrimary">@color/white</item>
        <item name="themeAccentTextSecondary">@color/accentItemSecondary</item>

        <item name="themeTextPrimary">@color/textPrimary</item>
        <item name="themeTextSecondary">@color/textSecondary</item>
        <item name="themeTextHandle">@color/textHandle</item>
        <item name="themeTextHighlight">@color/textHighlight</item>

        <item name="themeNoteBackground">@color/white</item>
        <item name="themeNoteRipple">@color/rippleDefault</item>

    </style>

    <style name="Dark" parent="CrystalNoteTheme">

        <item name="themeStatusBar">@color/charcoalDark</item>

        <item name="themeToolbar">@color/charcoalLight</item>
        <item name="themeToolbarRipple">@color/rippleDark</item>
        <item name="themeToolbarTextPrimary">@color/whiteSmoke</item>
        <item name="themeToolbarTextSecondary">@color/whiteSmokeAlpha</item>

        <item name="themeBackground">@color/charcoalDark</item>

        <item name="themeAccent">@color/charcoalLight</item>
        <item name="themeAccentRipple">@color/rippleDark</item>
        <item name="themeAccentTextPrimary">@color/white</item>
        <item name="themeAccentTextSecondary">@color/accentItemSecondary</item>

        <item name="themeTextPrimary">@color/textPrimaryDark</item>
        <item name="themeTextSecondary">@color/textSecondaryDark</item>
        <item name="themeTextHandle">@color/textHandle</item>
        <item name="themeTextHighlight">@color/textHighlight</item>

        <item name="themeNoteBackground">@color/charcoalLight</item>
        <item name="themeNoteRipple">@color/rippleDark</item>

    </style>

</resources>