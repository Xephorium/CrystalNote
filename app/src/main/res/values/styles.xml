<resources>

    <!-- Universal Theme -->
    <style name="CrystalNoteTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:toolbarStyle">@style/ToolbarTheme</item>
        <item name="android:colorControlActivated">?themeColorTextHandle</item>
        <item name="android:colorControlHighlight">?themeColorRipplePrimary</item>
        <item name="android:textColorHighlight">?themeColorTextHighlight</item>
        <item name="android:textColorHint">?themeColorTextHint</item>
    </style>


    <!-- Color Themes -->

    <style name="Monochrome" parent="CrystalNoteTheme">

        <item name="themeColorPrimary">@color/charcoalLight</item>
        <item name="themeColorPrimaryDark">@color/charcoalDark</item>
        <item name="themeColorAccent">@color/charcoalLight</item>

        <item name="themeColorTextHandle">@color/textHandle</item>
        <item name="themeColorRipplePrimary">@color/rippleLight</item>

        <item name="themeColorTextHighlight">@color/textHighlight</item>
        <item name="themeColorTextHint">@color/textHint</item>
    </style>

    <style name="Blue" parent="CrystalNoteTheme">
        <item name="themeColorPrimary">@color/blue700</item>
        <item name="themeColorPrimaryDark">@color/blue800</item>
    </style>


    <!-- Splash Theme -->
    <style name="SplashTheme" parent ="ThemeOverlay.AppCompat.Dark">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Control Themes -->
    <style name="ToolbarTheme" parent="Theme.AppCompat">
        <item name="android:background">?themeColorPrimary</item>
        <item name="android:actionMenuTextColor">@color/toolbarTextPrimary</item>
        <item name="android:colorControlActivated">@color/textHandle</item>
    </style>

    <style name="ToolbarTitleTheme" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/whiteSmoke</item>
    </style>

    <style name="FloatingActionButtonTheme" parent="Widget.Design.FloatingActionButton">
        <item name="android:elevation">@dimen/floatingActionButtonElevation</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ListViewItemTheme">
        <item name="android:colorEdgeEffect">@color/gray8</item>
    </style>

    <!-- Text -->
    <style name="ListViewHeaderTheme" parent="@style/TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ToolbarEditTextTheme" parent="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/toolbarTextPrimary</item>
        <item name="android:textColorHighlight">@color/toolbarTextHighlight</item>
        <item name="android:textColorHint">@color/toolbarTextHint</item>
        <item name="android:textColorTertiary">@color/toolbarTextPrimary</item>
        <item name="android:colorControlActivated">@color/toolbarTextHint</item>
        <item name="android:textCursorDrawable">@color/toolbarTextPrimary</item>
    </style>

</resources>
