<resources>

    <!-- Splash Theme -->

    <style name="SplashTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <!-- Universal App Theme -->

    <style name="CrystalNoteTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">?themeAccent</item>
        <item name="android:colorControlActivated">?themeTextHandle</item>
        <item name="android:colorControlHighlight">?themeToolbarRipple</item>
        <item name="android:textColorHighlight">?themeTextHighlight</item>
        <item name="android:colorEdgeEffect">?themeOverscroll</item>
        <item name="android:toolbarStyle">@style/ToolbarTheme</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat">
        <item name="android:background">?themeToolbar</item>
        <item name="android:actionMenuTextColor">?themeToolbarTextPrimary</item>
        <item name="android:colorControlActivated">?themeTextHandle</item>
    </style>


    <!-- Base Color Themes -->

    <style name="Light" parent="CrystalNoteTheme">

        <item name="themeStatusBar">@color/charcoalDark</item>

        <item name="themeToolbar">@color/charcoalLight</item>
        <item name="themeToolbarRipple">@color/rippleDark</item>
        <item name="themeToolbarTextPrimary">@color/whiteSmoke</item>
        <item name="themeToolbarTextSecondary">@color/whiteSmokeAlpha</item>

        <item name="themeBackground">@color/backgroundLight</item>
        <item name="themeDivider">@color/dividerLight</item>
        <item name="themeOverscroll">@color/charcoalLight</item>

        <item name="themeAccent">@color/charcoalLight</item>
        <item name="themeAccentRipple">@color/rippleDark</item>
        <item name="themeAccentTextPrimary">@color/white</item>
        <item name="themeAccentTextSecondary">@color/accentItemSecondary</item>

        <item name="themeTextPrimary">@color/textLightPrimary</item>
        <item name="themeTextSecondary">@color/textLightSecondary</item>
        <item name="themeTextTertiary">@color/textLightTertiary</item>
        <item name="themeTextInvertedPrimary">@color/textDarkPrimary</item>
        <item name="themeTextInvertedSecondary">@color/textDarkSecondary</item>
        <item name="themeTextHandle">@color/textHandle</item>
        <item name="themeTextHighlight">@color/textHighlight</item>

        <item name="themeNoteBackground">@color/white</item>
        <item name="themeNoteRipple">@color/rippleDefault</item>
        <item name="themeNoteUnderline">@color/textUnderline</item>

        <item name="themeSettingsPreviewBackground">@color/settingsPreviewBackground</item>

        <item name="themeDrawerItem">@color/drawerItemIcon</item>
        <item name="themeDrawerItemSelected">@color/drawerItemSelectedIcon</item>
        <item name="themeDrawerItemSelectedBackground">@color/drawerSelectionLight</item>
        <item name="themeDrawerImageFilter">@color/drawerFilterCharcoal</item>

    </style>

    <style name="Dark" parent="CrystalNoteTheme">

        <item name="themeStatusBar">@color/charcoalDark</item>

        <item name="themeToolbar">@color/charcoalLight</item>
        <item name="themeToolbarRipple">@color/rippleDark</item>
        <item name="themeToolbarTextPrimary">@color/whiteSmoke</item>
        <item name="themeToolbarTextSecondary">@color/whiteSmokeAlpha</item>

        <item name="themeBackground">@color/backgroundDark</item>
        <item name="themeDivider">@color/dividerDark</item>
        <item name="themeOverscroll">#fff</item>

        <item name="themeAccent">@color/charcoalLight</item>
        <item name="themeAccentRipple">@color/rippleDark</item>
        <item name="themeAccentTextPrimary">@color/white</item>
        <item name="themeAccentTextSecondary">@color/accentItemSecondary</item>

        <item name="themeTextPrimary">@color/textDarkPrimary</item>
        <item name="themeTextSecondary">@color/textDarkSecondary</item>
        <item name="themeTextTertiary">@color/textDarkTertiary</item>
        <item name="themeTextInvertedPrimary">@color/textDarkPrimary</item>
        <item name="themeTextInvertedSecondary">@color/textDarkSecondary</item>
        <item name="themeTextHandle">@color/textHandle</item>
        <item name="themeTextHighlight">@color/textHighlight</item>

        <item name="themeNoteBackground">#555</item>
        <item name="themeNoteRipple">@color/rippleDark</item>
        <item name="themeNoteUnderline">#666</item>

        <item name="themeSettingsPreviewBackground">#000</item>

        <item name="themeDrawerItem">@color/textDarkSecondary</item>
        <item name="themeDrawerItemSelected">@color/textDarkPrimary</item>
        <item name="themeDrawerItemSelectedBackground">@color/drawerSelectionDark</item>
        <item name="themeDrawerImageFilter">@color/drawerFilterBlack</item>

    </style>

</resources>